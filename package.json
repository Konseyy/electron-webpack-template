{
  "name": "vite-electron-builder",
  "description": "Secure boilerplate for Electron app based on Vite",
  "private": true,
  "engines": {
    "node": ">=v18.0.0",
    "pnpm": ">=7.0.0"
  },
  "author": {
    "email": "vgbukalders@gmail.com",
    "name": "Valdis",
    "url": "https://valdis.me"
  },
  "main": "src/main/dist/index.cjs",
  "scripts": {
    "start": "node scripts/watch.mjs",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./src/main && vite build",
    "build:preload": "cd ./src/preload && vite build",
    "build:renderer": "cd ./src/renderer && vite build",
    "make": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r src/main --passWithNoTests",
    "test:preload": "vitest run -r src/preload --passWithNoTests",
    "test:renderer": "vitest run -r src/renderer --passWithNoTests",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,vue",
    "typecheck:main": "tsc --noEmit -p src/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p src/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p src/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "postinstall": "electron-builder install-app-deps && cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,json}\""
  },
  "devDependencies": {
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@vitejs/plugin-vue": "3.0.3",
    "cross-env": "7.0.3",
    "electron": "20.0.3",
    "electron-builder": "23.3.3",
    "eslint": "8.22.0",
    "eslint-plugin-vue": "9.3.0",
    "happy-dom": "6.0.4",
    "nano-staged": "0.8.0",
    "playwright": "1.25.0",
    "simple-git-hooks": "2.8.0",
    "typescript": "4.7.4",
    "unplugin-auto-expose": "0.0.2",
    "vite": "3.0.9",
    "vitest": "0.22.1",
    "vue-tsc": "0.40.1"
  },
  "dependencies": {
    "electron-updater": "5.2.1",
    "vue": "3.2.37"
  }
}
