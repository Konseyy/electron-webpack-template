{
  "version": "0.0.0",
  "name": "electron-webpack-template",
  "description": "Electron boilerplate using Webpack",
  "private": true,
  "engines": {
    "node": ">=v18.0.0",
    "pnpm": ">=7.0.0"
  },
  "packageManager": "pnpm@7.0.0",
  "repository": {
    "url": "https://github.com/Konseyy/vite-electron-boilerplate"
  },
  "author": {
    "email": "vgbukalders@gmail.com",
    "name": "Konsey",
    "url": "https://valdis.me"
  },
  "main": "src/main/dist/index.js",
  "scripts": {
    "start": "cross-env MODE=development ts-node --project tsconfig.node.json scripts/dev-server.ts",
    "build": "cross-env MODE=production concurrently \"pnpm build:main\" \"pnpm build:preload\" \"pnpm build:renderer\"",
    "build:dev": "cross-env MODE=development concurrently \"pnpm build:main\" \"pnpm build:preload\" \"pnpm build:renderer\"",
    "prebuild:main": "rimraf src/main/dist/",
    "build:main": "webpack -c src/main/webpack.config.ts",
    "prebuild:preload": "rimraf src/preload/dist/",
    "build:preload": "webpack -c src/preload/webpack.config.ts",
    "prebuild:renderer": "rimraf src/renderer/dist/",
    "build:renderer": "webpack -c src/renderer/webpack.config.ts",
    "precompile": "rimraf dist/*",
    "compile": "cross-env MODE=production pnpm build && electron-builder build --config .electron-builder.config.js --dir",
    "premake": "rimraf dist/*",
    "make": "cross-env MODE=production pnpm build && electron-builder build --config .electron-builder.config.js",
    "test": "pnpm test:main && pnpm test:preload && pnpm test:renderer && pnpm test:e2e",
    "test:e2e": "pnpm build && jest --rootDir __test__",
    "test:main": "jest --rootDir src/main/__test__",
    "test:preload": "jest --rootDir src/preload/__test__",
    "test:renderer": "jest --rootDir src/renderer/__test__",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,tsx",
    "typecheck:main": "tsc --noEmit -p src/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p src/preload/tsconfig.json",
    "typecheck:renderer": "tsc --noEmit -p src/renderer/tsconfig.json",
    "typecheck": "pnpm typecheck:main && pnpm typecheck:preload && pnpm typecheck:renderer",
    "postinstall": "electron-builder install-app-deps",
    "format": "npx prettier --write \"**/*.{js,jsx,ts,tsx,json}\""
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "^5.35.1",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.3.0",
    "cross-env": "7.0.3",
    "electron": "20.0.3",
    "electron-builder": "23.3.3",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "8.22.0",
    "eslint-plugin-react": "7.31.1",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^28.0.0",
    "playwright": "1.25.0",
    "react-refresh": "^0.14.0",
    "resolve-ts-aliases": "^1.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.54.5",
    "sass-loader": "^13.0.2",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4",
    "typescript-plugin-css-modules": "^3.4.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.0"
  },
  "dependencies": {
    "electron-updater": "5.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
