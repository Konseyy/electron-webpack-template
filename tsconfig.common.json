{
  "compilerOptions": {
    "types": ["node"],
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "dom", "dom.iterable"]
  }
}
